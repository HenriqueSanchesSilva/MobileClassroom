<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pizzaria">

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="622dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="445dp"
            android:layout_height="144dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/pizza" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Escolha seu sabor e quantidade:"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="19dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgQueijo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/queijo"
                app:layout_constraintEnd_toStartOf="@+id/space1"
                app:layout_constraintStart_toStartOf="parent" />

            <Space
                android:id="@+id/space1"
                android:layout_width="20dp"
                android:layout_height="25dp" />

            <ImageView
                android:id="@+id/imgMargh"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/marghe"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/space1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R$ 79,99" />

            <Space
                android:layout_width="61dp"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R$ 79,99" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtQueijo"
                android:layout_width="122dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Quantidade"
                android:inputType="text"
                android:textColorHint="@color/white" />

            <Space
                android:layout_width="20dp"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/txtMargh"
                android:layout_width="122dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Quantidade"
                android:inputType="text"
                android:textColorHint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCalabresa"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/calabresa"
                app:layout_constraintEnd_toStartOf="@+id/space2"
                app:layout_constraintStart_toStartOf="parent" />

            <Space
                android:id="@+id/space2"
                android:layout_width="20dp"
                android:layout_height="25dp" />

            <ImageView
                android:id="@+id/imgChocolate"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/chocolate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/space2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R$ 59,99" />

            <Space
                android:layout_width="66dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R$ 62,00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtCalabresa"
                android:layout_width="122dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Quantidade"
                android:inputType="text"
                android:textColorHint="@color/white" />

            <Space
                android:layout_width="20dp"
                android:layout_height="25dp" />

            <EditText
                android:id="@+id/txtChocolate"
                android:layout_width="122dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Quantidade"
                android:inputType="text"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="19dp" />

        <Button
            android:id="@+id/btnPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#CD3300"
            android:onClick="pedido"
            android:text="Fazer pedido"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
